---
// HeroAccordion.astro
import { Image } from 'astro:assets';

const items = [
    { title: "Innovación", subtitle: "Robótica & IA", img: "https://images.unsplash.com/photo-1581092921461-eab62e97a783?q=80&w=1200&fit=crop" },
    { title: "Humanidades", subtitle: "Pensamiento Crítico", img: "https://images.unsplash.com/photo-1455390582262-044cdead277a?q=80&w=1200&fit=crop" },
    { title: "Deportes", subtitle: "Disciplina y Salud", img: "https://images.unsplash.com/photo-1461896836934-ffe607ba8211?q=80&w=1200&fit=crop" },
    { title: "Artes", subtitle: "Creatividad Cultural", img: "https://images.unsplash.com/photo-1513364776144-60967b0f800f?q=80&w=1200&fit=crop" }
];
---

<section class="h-[calc(100vh-80px)] min-h-[600px] bg-gray-900 flex flex-col md:flex-row overflow-hidden relative">

    <div class="absolute top-8 left-6 md:left-10 z-40 pointer-events-none mix-blend-difference text-white">
        <h1 class="text-xs md:text-sm font-black uppercase tracking-[0.3em] mb-2">
            Descubre tu Potencial
        </h1>
        <div class="h-0.5 w-12 bg-white"></div>
    </div>

    {items.map((item, index) => (
            <div class="group relative flex-1 hover:flex-[3] transition-all duration-700 ease-[cubic-bezier(0.22,1,0.36,1)] border-b md:border-b-0 md:border-r border-white/10 overflow-hidden cursor-crosshair will-change-[flex-grow]">

                <Image
                        src={item.img}
                        alt={item.title}
                        width={1200}
                        height={1600}
                        format="webp"
                        quality={80}
                        loading="eager"
                        fetchpriority={index === 0 ? "high" : "auto"}
                        class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-100 group-hover:scale-105 transition-all duration-1000 ease-out grayscale group-hover:grayscale-0"
                />

                <div class="absolute inset-0 bg-[#000089] mix-blend-multiply opacity-60 group-hover:opacity-20 transition-opacity duration-500"></div>

                <div class="absolute inset-0 flex flex-col justify-end p-8 md:p-12 z-20">

                <span class="absolute top-4 right-4 md:top-8 md:right-8 text-6xl md:text-8xl font-black text-white/10 group-hover:text-white/20 transition-colors select-none font-sans leading-none">
                    0{index + 1}
                </span>

                    <div class="relative transform md:group-hover:translate-x-0 transition-transform duration-500">

                        <h2 class="text-3xl md:text-5xl font-black text-white uppercase tracking-tighter leading-none mb-2 md:mb-0
                               md:origin-bottom-left md:-rotate-90 md:absolute md:bottom-2 md:left-0 md:w-[400px]
                               group-hover:rotate-0 group-hover:relative group-hover:w-auto transition-all duration-500 ease-[cubic-bezier(0.22,1,0.36,1)]">
                            {item.title}
                        </h2>

                        <div class="overflow-hidden max-h-0 opacity-0 group-hover:max-h-40 group-hover:opacity-100 transition-all duration-700 delay-100">
                            <div class="pt-4 md:pt-2">
                                <p class="text-blue-200 text-sm md:text-base font-medium mb-6 max-w-xs leading-relaxed">
                                    {item.subtitle}
                                </p>

                                <span class="inline-flex items-center gap-3 text-white text-xs font-bold uppercase tracking-widest group/btn">
                                <span class="border-b border-white pb-1 group-hover/btn:border-blue-300 group-hover/btn:text-blue-300 transition-colors">Explorar</span>
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                                </svg>
                            </span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
    ))}

</section>