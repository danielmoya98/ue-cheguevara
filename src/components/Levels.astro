---
// src/components/AcademicLevels.astro

const levels = [
    {
        id: "01",
        title: "Inicial",
        subtitle: "Pre-Escolar",
        desc: "Estimulación temprana en un ambiente seguro.",
        details: ["Desarrollo Motriz", "Iniciación Musical", "Inglés Lúdico", "Valores"],
        iconPath: "M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"
    },
    {
        id: "02",
        title: "Primaria",
        subtitle: "Bases Sólidas",
        desc: "Formación integral en ciencias y humanidades.",
        details: ["Pensamiento Lógico", "Robótica Básica", "Deportes", "Lectura Comprensiva"],
        iconPath: "M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"
    },
    {
        id: "03",
        title: "Secundaria",
        subtitle: "Pre-Universitario",
        desc: "Preparación intensiva para la vida universitaria.",
        details: ["Bachillerato Bilingüe", "Laboratorios STEAM", "Liderazgo", "Orientación"],
        iconPath: "M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23-.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5"
    }
];
---

<section class="py-16 md:py-24 bg-white border-t border-gray-200">
    <div class="container mx-auto px-6">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 md:mb-16 border-b-2 border-gray-900 pb-6 md:pb-8">
            <div class="w-full md:w-auto">
                <span class="text-[#000089] font-bold uppercase tracking-[0.15em] md:tracking-widest text-[10px] md:text-xs mb-3 md:mb-2 block">
                    Oferta Académica
                </span>
                <h2 class="text-3xl md:text-5xl font-black text-gray-900 leading-[0.9] md:leading-none tracking-tighter uppercase">
                    Niveles de <br class="hidden md:block">Formación
                </h2>
            </div>

            <p class="text-left md:text-right text-gray-500 w-full md:max-w-xs text-sm mt-4 md:mt-0 font-medium border-t md:border-t-0 border-gray-100 pt-4 md:pt-0">
                Un plan curricular integrado desde los primeros pasos hasta la graduación.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 border-t border-l border-gray-200">
            {levels.map((level) => (
                    <div class="group relative bg-white border-r border-b border-gray-200 p-8 md:p-10 hover:bg-[#000089] transition-all duration-500 ease-out flex flex-col justify-between min-h-[420px] md:min-h-[500px] overflow-hidden">

                    <span class="absolute -top-4 -right-4 md:-top-6 md:-right-6 text-8xl md:text-9xl font-black text-gray-50 group-hover:text-white/10 transition-colors select-none leading-none z-0">
                        {level.id}
                    </span>

                        <div class="relative z-10">
                            <div class="flex items-center justify-between mb-6 md:mb-8">
                            <span class="text-[10px] md:text-xs font-bold uppercase tracking-[0.2em] text-gray-400 group-hover:text-blue-300 transition-colors">
                                Nivel {level.id}
                            </span>
                                <div class="w-8 h-8 md:w-10 md:h-10 text-[#000089] group-hover:text-white transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                                        <path stroke-linecap="square" stroke-linejoin="miter" d={level.iconPath} />
                                    </svg>
                                </div>
                            </div>

                            <h3 class="text-2xl md:text-3xl font-black text-gray-900 mb-1 md:mb-2 group-hover:text-white transition-colors uppercase tracking-tight">
                                {level.title}
                            </h3>
                            <p class="text-xs md:text-sm font-bold text-[#000089] uppercase tracking-widest mb-4 md:mb-6 group-hover:text-blue-200 transition-colors">
                                {level.subtitle}
                            </p>

                            <p class="text-sm text-gray-500 leading-relaxed mb-6 md:mb-8 group-hover:text-blue-100/90 transition-colors font-medium">
                                {level.desc}
                            </p>

                            <ul class="space-y-2 md:space-y-3 border-t border-gray-100 group-hover:border-white/20 pt-4 md:pt-6 transition-colors">
                                {level.details.map((detail) => (
                                        <li class="flex items-center gap-3 text-xs md:text-sm font-bold text-gray-600 group-hover:text-white transition-colors">
                                            <span class="w-1.5 h-1.5 bg-[#000089] group-hover:bg-blue-400 transition-colors shrink-0"></span>
                                            {detail}
                                        </li>
                                ))}
                            </ul>
                        </div>

                        <div class="mt-6 md:mt-8 relative z-10">
                            <a href={`/academico#${level.title.toLowerCase()}`} class="inline-flex items-center gap-2 text-[10px] md:text-xs font-black uppercase tracking-widest text-[#000089] group-hover:text-white transition-colors group/btn">
                                <span class="border-b-2 border-[#000089] group-hover:border-white pb-0.5 transition-colors">Ver Malla</span>
                                <span class="group-hover:translate-x-1 transition-transform duration-300">→</span>
                            </a>
                        </div>

                    </div>
            ))}
        </div>
    </div>
</section>