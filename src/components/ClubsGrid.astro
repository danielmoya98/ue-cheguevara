---
// src/components/ClubsGrid.astro
import { Image } from 'astro:assets';

const clubs = [
    { category: "Tecnología", title: "Robótica & Coding", img: "https://images.unsplash.com/photo-1581092921461-eab62e97a783?q=80&w=600", schedule: "Mar y Jue 15:00" },
    { category: "Deportes", title: "Selección de Fútbol", img: "https://images.unsplash.com/photo-1574629810360-7efbbe195018?q=80&w=600", schedule: "Lun/Mie/Vie 16:00" },
    { category: "Arte", title: "Danza Folclórica", img: "https://images.unsplash.com/photo-1547153760-18fc86324498?q=80&w=600", schedule: "Vie 15:00" },
    { category: "Música", title: "Orquesta Estudiantil", img: "https://images.unsplash.com/photo-1511379938547-c1f69419868d?q=80&w=600", schedule: "Sab 09:00" },
    { category: "Ciencia", title: "Club de Astronomía", img: "https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=600", schedule: "Jue 19:00" },
    { category: "Debate", title: "Modelo Naciones Unidas", img: "https://images.unsplash.com/photo-1577962917302-cd874c4e31d2?q=80&w=600", schedule: "Mie 15:30" }
];
---

<section class="py-16 md:py-24 bg-white border-b border-gray-100">
    <div class="container mx-auto px-6">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 md:mb-16 border-b-2 border-gray-900 pb-6 md:pb-8">
            <div class="w-full md:w-auto mb-4 md:mb-0">
                <span class="text-[#000089] font-bold uppercase tracking-widest text-[10px] md:text-xs mb-2 block">Extracurriculares</span>
                <h2 class="text-4xl md:text-6xl font-black text-gray-900 leading-[0.9] tracking-tighter uppercase">
                    Talleres <br>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#000089] to-blue-600">Creativos</span>
                </h2>
            </div>

            <div class="w-full md:w-auto flex justify-start md:justify-end">
                <p class="text-left md:text-right text-gray-500 max-w-xs text-sm font-medium border-l-2 border-gray-200 pl-4 md:pl-0 md:border-l-0 md:border-r-2 md:pr-4">
                    Espacios diseñados para potenciar habilidades blandas, liderazgo y talentos específicos fuera del aula.
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-0 md:border-t md:border-l md:border-gray-200">
            {clubs.map((club) => (
                    <div class="group relative aspect-video md:aspect-[3/4] overflow-hidden cursor-pointer md:border-r md:border-b md:border-gray-200 bg-gray-100">

                        <Image
                                src={club.img}
                                alt={club.title}
                                width={600}
                                height={800}
                                format="webp"
                                loading="lazy"
                                decoding="async"
                                class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-110 transition-all duration-700 ease-out will-change-transform"
                        />

                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 transition-opacity duration-300"></div>
                        <div class="absolute inset-0 bg-[#000089] mix-blend-multiply opacity-0 group-hover:opacity-40 transition-opacity duration-500"></div>

                        <div class="absolute inset-0 p-6 md:p-8 text-white z-20 flex flex-col justify-end h-full">

                            <div class="absolute top-4 left-4 md:top-6 md:left-6">
                            <span class="inline-block bg-white text-black px-2 py-0.5 md:px-3 md:py-1 text-[9px] md:text-[10px] font-bold uppercase tracking-widest border border-black/10 group-hover:bg-[#000089] group-hover:text-white transition-colors duration-300 shadow-sm">
                                {club.category}
                            </span>
                            </div>

                            <div class="absolute top-4 right-4 md:top-6 md:right-6 w-8 h-8 md:w-10 md:h-10 border border-white/30 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 -translate-y-2 group-hover:translate-y-0 text-white bg-white/10 backdrop-blur-sm">
                                ↗
                            </div>

                            <div class="transform translate-y-2 md:translate-y-4 group-hover:translate-y-0 transition-transform duration-500 ease-out">
                                <h3 class="text-2xl md:text-3xl font-black leading-none mb-2 md:mb-4 uppercase tracking-tight drop-shadow-lg">
                                    {club.title}
                                </h3>

                                <div class="h-px w-0 group-hover:w-full bg-white/50 transition-all duration-700 mb-2 md:mb-4"></div>

                                <div class="flex justify-between items-center text-[10px] md:text-xs uppercase tracking-widest text-gray-300 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity duration-500 md:delay-100">
                                    <span class="hidden md:inline">Horario:</span>
                                    <span class="font-bold text-white bg-white/20 px-2 py-1 backdrop-blur-md rounded-sm">{club.schedule}</span>
                                </div>
                            </div>
                        </div>

                    </div>
            ))}
        </div>

    </div>
</section>