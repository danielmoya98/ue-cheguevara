---
// admisiones.astro
const steps = [
    { title: "Pre-inscripción", desc: "Llenado del formulario digital y reserva de cupo." },
    { title: "Entrevista Familiar", desc: "Reunión con psicología y dirección académica." },
    { title: "Documentación", desc: "Entrega de requisitos físicos en secretaría." },
    { title: "Matriculación", desc: "Pago de la primera cuota y firma de contrato." }
];

const requirements = [
    "Certificado de Nacimiento Original",
    "Cédula de Identidad (Estudiante y Padres)",
    "Libreta de Calificaciones (Gestión Anterior)",
    "Certificado de Vacunas (Nivel Inicial)",
    "Certificado de No Adeudo (Si viene de otro colegio)"
];
---

<section id="admisiones" class="py-24 bg-white border-t border-gray-100 font-sans">
    <div class="container mx-auto px-6">

        <div class="grid lg:grid-cols-12 gap-12 lg:gap-24">

            <div class="lg:col-span-7">
                <span class="text-[#000089] font-bold uppercase tracking-widest text-xs mb-6 block flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#000089]"></span> Únete a Nosotros
                </span>

                <h2 class="text-4xl md:text-6xl font-black text-gray-900 mb-16 leading-[0.9] tracking-tighter">
                    Proceso de <br> <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#000089] to-blue-600">Admisión 2026</span>
                </h2>

                <div class="flex flex-col">
                    {steps.map((step, index) => (
                            <div class="group py-8 border-t border-gray-200 hover:border-[#000089] transition-colors duration-300 flex flex-col md:flex-row md:items-baseline gap-4 md:gap-12 cursor-default">

                            <span class="text-4xl font-bold text-gray-200 group-hover:text-[#000089] transition-colors duration-300 tabular-nums font-mono">
                                0{index + 1}
                            </span>

                                <div>
                                    <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:translate-x-2 transition-transform duration-300 ease-out">
                                        {step.title}
                                    </h3>
                                    <p class="text-gray-500 text-base leading-relaxed max-w-md group-hover:text-gray-700 transition-colors">
                                        {step.desc}
                                    </p>
                                </div>
                            </div>
                    ))}
                    <div class="border-t border-gray-200"></div>
                </div>
            </div>

            <div class="lg:col-span-5 flex flex-col h-full">

                <div class="bg-gray-50 p-10 md:p-12 h-full flex flex-col justify-between border-l-4 border-[#000089] relative overflow-hidden">

                    <div class="absolute -top-10 -right-10 w-40 h-40 bg-[#000089]/5 rounded-full blur-3xl pointer-events-none"></div>

                    <div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-8 flex items-center gap-4">
                            <div class="w-10 h-10 bg-white border border-gray-200 flex items-center justify-center text-[#000089]">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="square" stroke-linejoin="miter" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25z" />
                                </svg>
                            </div>
                            Requisitos Básicos
                        </h3>

                        <ul class="space-y-4">
                            {requirements.map((req) => (
                                    <li class="flex items-start gap-4 group cursor-default">
                                        <div class="w-5 h-5 mt-0.5 border border-gray-300 bg-white flex items-center justify-center group-hover:border-[#000089] transition-colors duration-300 shrink-0">
                                            <svg class="w-3 h-3 text-[#000089] opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                                            </svg>
                                        </div>
                                        <span class="text-gray-600 font-medium group-hover:text-gray-900 transition-colors leading-snug">
                                        {req}
                                    </span>
                                    </li>
                            ))}
                        </ul>
                    </div>

                    <div class="mt-12 pt-8 border-t border-gray-200">
                        <p class="text-xs font-bold uppercase tracking-widest text-gray-400 mb-4">Descargas Útiles</p>
                        <div class="grid grid-cols-1 gap-3">
                            <a href="https://wa.me/591XXXXXXXX" class="w-full bg-[#000089] text-white py-4 px-6 text-center font-bold uppercase tracking-widest text-xs hover:bg-blue-900 transition-all flex items-center justify-center gap-2 group">
                                <span>Contactar Asesor</span>
                                <span class="group-hover:translate-x-1 transition-transform">→</span>
                            </a>
                            <a href="#" class="w-full border border-gray-300 text-gray-600 py-4 px-6 text-center font-bold uppercase tracking-widest text-xs hover:border-[#000089] hover:text-[#000089] bg-white transition-all">
                                Descargar Guía PDF
                            </a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>