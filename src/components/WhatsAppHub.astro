---
// src/components/WhatsAppHub.astro
const contacts = [
    {
        area: "Admisiones",
        name: "Lic. Carla Gómez",
        desc: "Información sobre cupos, requisitos y nuevos ingresos 2026.",
        phone: "59170000001",
        msg: "Hola, quisiera información sobre inscripciones para la gestión 2026.",
        status: "En línea"
    },
    {
        area: "Secretaría",
        name: "Sra. Martha Ruiz",
        desc: "Certificados, legalizaciones y consultas administrativas generales.",
        phone: "59170000002",
        msg: "Hola, necesito realizar una consulta administrativa.",
        status: "Disponible"
    },
    {
        area: "Tesorería",
        name: "Lic. Pedro Alarcón",
        desc: "Pagos de mensualidades, facturación y temas contables.",
        phone: "59170000003",
        msg: "Hola, tengo una consulta sobre pagos/pensiones.",
        status: "Lun-Vie 8:00-16:00"
    }
];
---

<section class="py-12 bg-white border-t border-gray-200">
    <div class="grid md:grid-cols-3 border-t border-l border-gray-900">
        {contacts.map((contact) => (
                <a
                        href={`https://wa.me/${contact.phone}?text=${encodeURIComponent(contact.msg)}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group relative bg-white border-r border-b border-gray-900 p-10 hover:bg-[#25D366] transition-all duration-500 ease-out flex flex-col justify-between min-h-[380px] overflow-hidden"
                >
                    <div class="absolute -right-8 -top-8 text-gray-50 opacity-0 group-hover:opacity-20 transition-opacity duration-500 pointer-events-none">
                        <svg class="w-48 h-48 fill-current" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
                    </div>

                    <div class="relative z-10">
                        <div class="flex items-center gap-2 mb-8">
                            <div class="w-2 h-2 bg-[#25D366] group-hover:bg-white rounded-full animate-pulse"></div>
                            <span class="text-[10px] font-bold uppercase tracking-[0.2em] text-gray-400 group-hover:text-white transition-colors">
                            {contact.status}
                        </span>
                        </div>

                        <h3 class="text-3xl font-black text-gray-900 group-hover:text-white leading-none uppercase tracking-tighter mb-2 transition-colors">
                            {contact.area}
                        </h3>
                        <p class="text-xs font-bold text-[#000089] group-hover:text-white uppercase tracking-widest mb-6 transition-colors">
                            {contact.name}
                        </p>

                        <div class="h-px w-12 bg-gray-200 group-hover:bg-white/30 mb-6 transition-all group-hover:w-full"></div>

                        <p class="text-sm text-gray-500 group-hover:text-white leading-relaxed font-medium transition-colors">
                            {contact.desc}
                        </p>
                    </div>

                    <div class="relative z-10 flex items-center justify-between mt-8 border-t border-gray-100 pt-6 group-hover:border-white/20 transition-colors">
                    <span class="text-[10px] font-bold uppercase tracking-widest text-gray-400 group-hover:text-white">
                        Iniciar Chat
                    </span>
                        <svg class="w-6 h-6 text-[#25D366] group-hover:text-white transition-colors" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                        </svg>
                    </div>
                </a>
        ))}
    </div>
</section>