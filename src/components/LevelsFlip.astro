---

<section class="py-16 md:py-24 bg-white border-t border-gray-200">
    <div class="container mx-auto px-6">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 md:mb-16 border-b-2 border-gray-900 pb-6 md:pb-8">
            <div class="w-full md:w-auto mb-4 md:mb-0">
                <span class="text-[#000089] font-bold uppercase tracking-widest text-[10px] md:text-xs mb-2 block">Oferta Académica</span>
                <h2 class="text-3xl md:text-5xl font-black text-gray-900 leading-[0.9] md:leading-none tracking-tight">
                    Niveles de <br>Formación
                </h2>
            </div>

            <div class="w-full md:w-auto flex justify-start md:justify-end">
                <p class="text-left md:text-right text-gray-500 max-w-xs text-sm font-medium border-l-2 border-gray-200 pl-4 md:pl-0 md:border-l-0 md:border-r-2 md:pr-4">
                    Un plan curricular integrado desde los primeros pasos hasta la graduación.
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 border-t border-l border-gray-200">
            {levels.map((level) => (
                    <div class="group relative bg-white border-r border-b border-gray-200 p-8 md:p-10 hover:bg-[#000089] transition-all duration-500 ease-out flex flex-col justify-between min-h-[450px] md:min-h-[500px] overflow-hidden">

                    <span class="absolute -top-4 -right-4 md:-top-6 md:-right-6 text-8xl md:text-9xl font-black text-gray-50 group-hover:text-white/10 transition-colors select-none leading-none z-0">
                        {level.id}
                    </span>

                        <div class="relative z-10">
                            <div class="flex items-center justify-between mb-6 md:mb-8">
                            <span class="text-[10px] md:text-xs font-bold uppercase tracking-[0.2em] text-gray-400 group-hover:text-blue-300 transition-colors">
                                Nivel {level.id}
                            </span>
                                <div class="w-8 h-8 md:w-10 md:h-10 text-[#000089] group-hover:text-white transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-full h-full">
                                        <path stroke-linecap="square" stroke-linejoin="miter" d={level.iconPath} />
                                    </svg>
                                </div>
                            </div>

                            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2 group-hover:text-white transition-colors leading-tight">
                                {level.title}
                            </h3>
                            <p class="text-xs md:text-sm font-medium text-[#000089] uppercase tracking-wide mb-4 md:mb-6 group-hover:text-blue-200 transition-colors">
                                {level.subtitle}
                            </p>

                            <p class="text-xs md:text-sm text-gray-500 leading-relaxed mb-6 md:mb-8 group-hover:text-blue-100/80 transition-colors">
                                {level.desc}
                            </p>

                            <ul class="space-y-2 md:space-y-3 border-t border-gray-100 group-hover:border-white/20 pt-4 md:pt-6 transition-colors">
                                {level.details.map((detail) => (
                                        <li class="flex items-center gap-2 md:gap-3 text-xs md:text-sm font-bold text-gray-600 group-hover:text-white transition-colors">
                                            <span class="w-1.5 h-1.5 bg-[#000089] group-hover:bg-blue-400 transition-colors shrink-0"></span> {detail}
                                        </li>
                                ))}
                            </ul>
                        </div>

                        <div class="mt-6 md:mt-8 relative z-10">
                            <a href={`/academico/${level.title.toLowerCase()}`} class="inline-flex items-center gap-2 text-[10px] md:text-xs font-black uppercase tracking-widest text-[#000089] group-hover:text-white transition-colors group/btn">
                                <span class="border-b-2 border-[#000089] group-hover:border-white pb-0.5 transition-colors">Ver Malla Curricular</span>
                                <span class="group-hover:translate-x-1 transition-transform duration-300">→</span>
                            </a>
                        </div>

                    </div>
            ))}
        </div>
    </div>
</section>