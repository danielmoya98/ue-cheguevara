---
// src/components/Team.astro
import { Image } from 'astro:assets';

const team = [
    { name: "Lic. María Rodríguez", role: "Directora General", degree: "PhD. en Gestión Educativa", img: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?q=80&w=800&fit=crop" },
    { name: "Ing. Carlos Méndez", role: "Coord. Académico", degree: "MSc. Innovación Pedagógica", img: "https://images.unsplash.com/photo-1560250097-0b93528c311a?q=80&w=800&fit=crop" },
    { name: "Lic. Sofía Vargas", role: "Psicopedagogía", degree: "Esp. Psicología Infantil", img: "https://images.unsplash.com/photo-1580489944761-15a19d654956?q=80&w=800&fit=crop" },
    { name: "Lic. Pedro Alarcón", role: "Coord. Deportivo", degree: "Lic. Ciencias del Deporte", img: "https://images.unsplash.com/photo-1531384441138-2736e62e0919?q=80&w=800&fit=crop" },
];
---

<section class="py-24 bg-white border-t border-gray-200">
    <div class="container mx-auto px-6">

        <div class="flex flex-col md:flex-row justify-between items-end mb-16 border-b-2 border-gray-900 pb-6">
            <div>
                <span class="text-[#000089] font-bold uppercase tracking-widest text-xs mb-2 block">Nuestro Equipo</span>
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 leading-none tracking-tight uppercase">
                    Liderazgo <br>Educativo
                </h2>
            </div>
            <p class="text-right text-gray-500 max-w-xs text-sm mt-4 md:mt-0 font-medium border-l-2 border-gray-200 pl-4">
                Profesionales con trayectoria dedicados a la excelencia académica.
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 border-t border-l border-gray-200">
            {team.map((member) => (
                    <div class="group relative bg-white border-r border-b border-gray-200 p-0 hover:bg-gray-50 transition-colors duration-500 cursor-crosshair">

                        <div class="p-6 pb-0">
                            <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative grayscale group-hover:grayscale-0 transition-all duration-700 ease-out">
                                <Image
                                        src={member.img}
                                        alt={member.name}
                                        width={400}
                                        height={533}
                                        format="webp"
                                        loading="lazy"
                                        decoding="async"
                                        class="w-full h-full object-cover object-top hover:scale-105 transition-transform duration-700"
                                />

                                <div class="absolute bottom-0 left-0 bg-white/90 backdrop-blur-sm px-3 py-2 border-t border-r border-gray-200">
                                <span class="text-[10px] font-bold uppercase tracking-widest text-[#000089]">
                                    {member.role}
                                </span>
                                </div>
                            </div>
                        </div>

                        <div class="p-6">
                            <h3 class="text-lg font-bold text-gray-900 leading-tight group-hover:text-[#000089] transition-colors mb-2">
                                {member.name}
                            </h3>

                            <div class="w-8 h-px bg-gray-300 mb-3 group-hover:w-full group-hover:bg-[#000089] transition-all duration-500"></div>

                            <p class="text-xs font-medium text-gray-400 uppercase tracking-wide group-hover:text-gray-600 transition-colors">
                                {member.degree}
                            </p>
                        </div>

                        <div class="absolute top-0 right-0 w-3 h-3 bg-[#000089] transform scale-0 group-hover:scale-100 transition-transform duration-300 origin-top-right"></div>

                    </div>
            ))}
        </div>

    </div>
</section>