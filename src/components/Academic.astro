---
// src/components/AcademicInfo.astro

const events = [
    { date: "03 FEB", title: "Inicio de Clases", type: "Académico" },
    { date: "15 ABR", title: "Aniversario del Colegio", type: "Cultural" },
    { date: "30 JUN", title: "Vacaciones de Invierno", type: "Receso" },
];

const downloads = [
    { title: "Calendario 2026", format: "PDF", size: "2.4 MB" },
    { title: "Lista de Útiles", format: "PDF", size: "1.1 MB" },
    { title: "Reglamento Interno", format: "PDF", size: "4.5 MB" },
    { title: "Horarios Secundaria", format: "PDF", size: "1.8 MB" }
];
---

<section class="py-16 md:py-24 bg-[#000089] text-white font-sans relative overflow-hidden border-t border-white/10">

    <div class="absolute top-0 right-0 w-[500px] md:w-[800px] h-[500px] md:h-[800px] pointer-events-none translate-x-1/3 -translate-y-1/3"
         style="background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0) 70%);">
    </div>

    <div class="container mx-auto px-6 relative z-10">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-12 border-b border-white/20 pb-8">
            <div class="mb-6 md:mb-0">
                <span class="text-blue-300 font-bold uppercase tracking-widest text-[10px] md:text-xs mb-2 block">Gestión 2026</span>
                <h2 class="text-3xl md:text-4xl font-bold tracking-tight leading-none">Portal Académico</h2>
            </div>
            <a href="/academico/calendario" class="text-white border-b border-white/50 pb-1 hover:text-blue-300 hover:border-blue-300 transition-colors font-bold uppercase text-xs md:text-sm tracking-widest">
                Ver Calendario Completo →
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">

            <div class="lg:col-span-5">
                <h3 class="text-lg md:text-xl font-bold mb-6 flex items-center gap-3 text-blue-100">
                    <span class="w-2 h-2 bg-blue-300 rounded-full animate-pulse"></span>
                    Próximos Eventos
                </h3>

                <div class="space-y-4">
                    {events.map((event) => {
                        const [day, month] = event.date.split(" ");
                        return (
                                <div class="bg-white/5 border border-white/10 p-4 rounded-none hover:bg-white/10 transition-colors flex items-start gap-5 group cursor-default border-l-4 border-l-transparent hover:border-l-blue-300">
                                    <div class="bg-white text-[#000089] p-2 text-center min-w-[60px] w-[60px] shrink-0">
                                        <span class="block text-[10px] font-bold uppercase tracking-widest">{month}</span>
                                        <span class="block text-2xl font-black leading-none tracking-tighter">{day}</span>
                                    </div>
                                    <div class="pt-1">
                                        <span class="text-[9px] font-bold text-blue-300 uppercase tracking-widest mb-1 block">{event.type}</span>
                                        <h4 class="text-base md:text-lg font-bold leading-tight group-hover:text-blue-200 transition-colors">{event.title}</h4>
                                    </div>
                                </div>
                        );
                    })}
                </div>
            </div>

            <div class="lg:col-span-7">
                <h3 class="text-lg md:text-xl font-bold mb-6 text-blue-100">Documentos y Normativas</h3>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    {downloads.map((doc) => (
                            <a
                                    href="#"
                                    aria-label={`Descargar ${doc.title}`}
                                    class="group bg-white p-5 hover:-translate-y-1 shadow-sm hover:shadow-xl transition-all duration-300 flex flex-col justify-between min-h-[120px] relative overflow-hidden"
                            >
                                <div class="absolute top-0 left-0 w-1 h-full bg-[#000089] transform scale-y-0 group-hover:scale-y-100 transition-transform duration-300 origin-bottom"></div>

                                <div class="flex justify-between items-start mb-3">
                                    <div class="w-8 h-8 bg-gray-50 rounded-full flex items-center justify-center text-[#000089] group-hover:bg-[#000089] group-hover:text-white transition-colors">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M12 12.75l-3-3m0 0l-3 3m3-3v7.5" />
                                        </svg>
                                    </div>
                                    <span class="text-[9px] font-bold bg-gray-100 px-2 py-0.5 rounded uppercase tracking-widest text-gray-500">{doc.format}</span>
                                </div>

                                <div>
                                    <h4 class="font-bold text-gray-900 text-base mb-0.5 group-hover:text-[#000089] transition-colors leading-tight">{doc.title}</h4>
                                    <p class="text-[10px] text-gray-400 font-medium uppercase tracking-wide">{doc.size}</p>
                                </div>
                            </a>
                    ))}
                </div>

                <div class="mt-8 bg-[#000060] border border-blue-500/20 p-4 rounded flex gap-3 items-start">
                    <div class="shrink-0 text-blue-300 mt-0.5">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
                        </svg>
                    </div>
                    <p class="text-xs md:text-sm text-blue-100 leading-relaxed">
                        Para acceder a las libretas electrónicas, ingresa al <a href="/padres" class="text-white underline decoration-blue-400 hover:decoration-white transition-all font-bold">Portal de Padres</a>.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>